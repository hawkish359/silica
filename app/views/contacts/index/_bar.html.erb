<div id="sendgrid-marketing-lists-index-bar" class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups" data-controller="contacts">
  <%= form_with(url: contacts_url, method: :post, id: 'sendgrid-marketing-lists-index-bar-form') do |form| %>

  <div class="btn-group collapse show" data-contacts-target="pagination" role="group" aria-label="Third group">
    <button type="button" class="btn btn-outline-brandprimary">1</button>
    <button type="button" class="btn btn-outline-brandprimary">2</button>
    <button type="button" class="btn btn-outline-brandprimary">3</button>
  </div>

  <div class="btn-group ms-3" role="group" aria-label="First group">
    <button type="button" data-contacts-target="plus" data-action="contacts#plus" class="btn btn-outline-brandprimary collapse show"><i class="fas fa-plus"></i></button>
  </div>

  <div class="collapse btn-group align-items-center justify-content-center ms-3" data-contacts-target="form" role="group" aria-label="First group">
    <input name="contact[first_name]" type="text" class="form-control me-1" placeholder="First name" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
    <input name="contact[last_name]" type="text" class="form-control me-1" placeholder="Last name" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
    <input name="contact[phone]" type="text" class="form-control me-1" placeholder="Phone" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
    <input name="contact[email]" type="text" class="form-control me-3" placeholder="Email" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
      <label class="form-check-label" for="flexSwitchCheckChecked">UT</label>
    </div>
    &nbsp;
    <div class="form-check form-switch">
      <input class="form-check-input pe-auto" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
      <label class="form-check-label" for="flexSwitchCheckChecked">NC</label>
    </div>
    <button type="button" class="btn btn-outline-brandprimary ms-4" data-contacts-target="save" data-action="contacts#save">SAVE</button>
  </div>


  <div class="btn-group" role="group" aria-label="Third group">
    <div class="input-group ms-3 me-3">
      <input type="text" class="form-control collapse show" data-contacts-target="search" placeholder="Search for..." aria-label="Input group example" aria-describedby="btnGroupAddon">
      <div class="input-group-text text-brandprimary collapse show" data-contacts-target="searchBtn" style="background: transparent" role="button" id="btnGroupAddon"><i class="fas fa-search"></i></div>
    </div>
  </div>
  <% end %>
</div>
